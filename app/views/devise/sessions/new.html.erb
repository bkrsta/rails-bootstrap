<section id="login">
  <div class="page-header">
    <h1>Sign in</h1>
  </div>
  <div class="row">
    <div class="span4 columns">
      <!--<h3>Default styles</h3>-->
      <p>Please enter your userid and password to log in.</p>
      <p>Some elaborate explanation why this is a good idea and what the remember me would actually do is
      definitely in order here - but cannot be provided yet for various reasons.</p>
    </div>

    <div class="span12 columns">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <fieldset>
          <!--<legend>User fields</legend>-->
          <!-- email -->
          <div class="clearfix">
            <%= f.label :email %>
            <div class="input">
                <%= f.email_field :email, :class=> "xlarge" %>
            </div>
          </div><!-- /clearfix -->

          <!-- password -->
          <div class="clearfix">
            <%= f.label :password %>
            <div class="input">
              <%= f.password_field :password, :class => "xlarge" %>
            </div>
          </div><!-- /clearfix -->

          <!-- remember me -->
          <div class="clearfix">
            <%= f.label :remember_me %>
            <div class="input">
              <ul class="inputs-list">
                <li><%= f.check_box :remember_me %></li>
              </ul>
            </div>
          </div><!-- /clearfix -->

          <div class="actions">
            <input type="submit" value="Login" class="btn primary">&nbsp;<button class="btn" type="reset">Cancel</button>
          </div>
        </fieldset>
      <% end %>
      <%= render :partial => "devise/shared/links" %>
    </div>


  </div><!-- /row -->

  <br>


</section>